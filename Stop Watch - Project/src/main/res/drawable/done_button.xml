<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="3dp" />
            <stroke android:color="#465073" />
            <gradient android:angle="-90" android:startColor="#32375A" android:endColor="#3C4187" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:color="#4B5578" />
            <solid android:color="#414673" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:color="#505573" />
            <gradient android:angle="-90" android:startColor="#555A9B" android:endColor="#37418C" />
        </shape>
    </item>
</selector>